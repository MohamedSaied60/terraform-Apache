pipeline {
    agent any
    
    environment {
        AWS_DEFAULT_REGION = 'us-east-1'
        TF_VAR_your_name   = 'Your Name Here'
        TF_VAR_environment = 'jenkins'
    }
    
    stages {
        stage('Checkout') {
            steps {
                checkout scm
                echo '✅ Repository checkout completed'
            }
        }
        
        stage('Terraform Init') {
            steps {
                dir('.') {
                    sh 'terraform init'
                }
            }
        }
        
        stage('Terraform Plan') {
            steps {
                dir('.') {
                    sh 'terraform plan'
                }
            }
        }
        
        stage('Terraform Apply') {
            steps {
                dir('.') {
                    withCredentials([[$class: 'AmazonWebServicesCredentialsBinding', credentialsId: 'aws-creds']]) {
                        sh 'terraform apply -auto-approve'
                    }
                }
            }
        }
        
        stage('Health Check') {
            steps {
                script {
                    timeout(time: 3, unit: 'MINUTES') {
                        waitUntil {
                            try {
                                def status = sh(script: "curl -s -o /dev/null -w '%{http_code}' http://${env.PUBLIC_IP}/health.html", returnStdout: true).trim()
                                return status == '200'
                            } catch (Exception e) {
                                echo "⏳ Waiting for Apache to start... (30s)"
                                sleep 30
                                return false
                            }
                        }
                    }
                }
            }
        }
    }
}
